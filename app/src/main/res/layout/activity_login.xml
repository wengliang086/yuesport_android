<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".LauncherActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/reg_logo"/>

    <TextView
        android:id="@+id/logo_desc"
        android:layout_below="@id/logo"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:typeface="monospace"
        android:textSize="23sp"
        android:text="@string/logo_desc"
        />

    <TextView
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/logo_desc"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/register_selector"
        android:gravity="center"
        android:text="@string/register"
        android:textSize="20sp"
        android:textColor="#D92303"
        />

    <TextView
        android:id="@+id/login_hint"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/register"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/login_hint"
        android:textSize="16sp"
        android:textColor="#FF9D80"
        />

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/login_hint"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_selector"
        android:text="@string/login"
        android:textSize="20sp"
        android:textColor="#FF9D80"
        android:gravity="center"
        />

</RelativeLayout>
